" disable backups
set nobackup
set nowritebackup
set noundofile
set noswapfile

" delete newlines
set backspace=indent,eol,start

" relative numbers
" set relativenumber
set number

" searching
set hlsearch
set incsearch
set ignorecase
set smartcase
noremap <silent> <leader><cr> :noh<cr>

" reduce delay that vim waits for key combos
set timeoutlen=250

" show hidden characters & fix unicode 
scriptencoding utf-8
set encoding=utf-8
set listchars=eol:â® 

" better tabs
set expandtab
set tabstop=4
set shiftwidth=4

" html indentation
filetype indent on

" word wrap (as opposed to letters)
set wrap linebreak nolist

" mapping
"- semi colon
imap ;; <Esc>
imap ;i ![]()<Esc>i

"- bufferless delete
nnoremap ddd "_dd

"- displayed line keys
nnoremap j gj
nnoremap k gk

"- tex (t) macros
"-- math mode macro
nnoremap t4 a$$<Esc>
"-- textrm macro
nnoremap t5 i\textrm{}<Esc>i
"-- superscript macro
nnoremap t6 la^{}<Esc>i
"-- subscript macro
nnoremap t7 la_{}<Esc>i

"- HTML
"-- doc setup
imap !<Tab> <!DOCTYPE html><Esc>oi<html><Esc>oi<Tab><head><Esc>oi<Tab><Tab><meta charset="UTF-8"><Esc>oi<Tab><Tab><meta name="viewport" content="width=device-width, initial-scale=1.0"><Esc>oi<Tab><Tab><link rel="stylesheet" href="style.css"><Esc>oi<Tab></head><Esc>oi<Tab><body><Esc>oooi<Tab><Tab><script src="script.js"></script><Esc>oi<Tab></body><Esc>oi</html><Esc>4k$a<Tab><Tab>

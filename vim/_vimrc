" disable backups
set nobackup
set nowritebackup
set noundofile
set noswapfile

" delete newlines
set backspace=indent,eol,start

" relative numbers
set relativenumber

" searching
set hlsearch
set incsearch
set ignorecase
set smartcase
noremap <silent> <leader><cr> :noh<cr>

" reduce delay that vim waits for key combos
set timeoutlen=250

" show hidden characters & fix unicode
scriptencoding utf-8
set encoding=utf-8
set listchars=eol:â® 

" mapping
"- semi colon
imap ;; <Esc>
imap ;i ![]()<Esc>i
imap oo <Esc>$a  <Enter>
nnoremap oo $a  <Enter>

"- time
map <F2> :echo strftime('%r')<CR>

"- bufferless delete
nnoremap d "_d
nnoremap dd "_dd

"- displayed line keys
nnoremap j gj
nnoremap k gk

"- tex (t) macros
"-- math mode macro
nnoremap t4 a$$<Esc>
"-- textrm macro
nnoremap t5 i\textrm{}<Esc>i
"-- superscript macro
nnoremap t6 la^{}<Esc>i
"-- subscript macro
nnoremap t7 la_{}<Esc>i
